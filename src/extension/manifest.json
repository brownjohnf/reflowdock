{
    "name": "Reflowdock",
    "version": "1.1",
    "manifest_version": 2,
    "content_scripts": [{
        "js": ["contentscript.js"],
        "matches": ["https://www.flowdock.com/app/*"]
    }],
    "web_accessible_resources": [
        "resources/*"
    ],
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"https://www.flowdock.com/*"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	}
}
